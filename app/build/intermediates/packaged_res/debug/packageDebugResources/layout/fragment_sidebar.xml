<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    android:paddingTop="32dp">

    <LinearLayout
        android:id="@+id/mode_switch_container"
        android:layout_width="48dp"
        android:layout_height="90dp"
        android:background="@drawable/bg_switch_container"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_audio"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_music_note"
            android:alpha="1.0"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/icon_video"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_play_circle"
            android:alpha="0.4"/> 
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sidebar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/mode_switch_container"
        app:layout_constraintBottom_toTopOf="@+id/btn_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_settings" 
        app:tint="#80FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
